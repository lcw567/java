package q.thread.ex2;

public class Task1 extends Thread {

    @Override
    public void run() {
        try {
            for (int i = 1; i < 20; i++) {
                if (i % 2 == 0) {
                    System.out.println(i + " ");
                }
                // Move the sleep call outside the if block to ensure it applies to every iteration
                Thread.sleep(100);
            }
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
    }
}
	


