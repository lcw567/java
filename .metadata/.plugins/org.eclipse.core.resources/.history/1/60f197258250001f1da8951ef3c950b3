package kh.model.vo;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

public class FoodSave {

	 public void fileSave(String fileName) {
		 try {
			FileOutputStream fOP = new FileOutputStream(fileName);// 파일 객체와 연결하는 파일 출력스트림
			try {
				ObjectOutputStream oos = new ObjectOutputStream(fOP);//파일에 Food 객체를 기록할 수 있는 객체 출력스트림을 추가
				oos.writeObject(food);
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

		 } catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	 }
	 Food food = new Food("사과", 20);
}
