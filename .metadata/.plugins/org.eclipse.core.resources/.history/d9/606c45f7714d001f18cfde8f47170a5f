package test240729.object1;

import java.util.Scanner;


public class LotteryMenu {
	
	private Scanner sc = new Scanner(System.in);
	private LotteryController lc = new LotteryController();

	public void mainMenu() {
			System.out.println("========== KH 추첨 프로그램 ==========\n");
			while(true) {
				System.out.println("=====***** 메인 메뉴 *****=====");
				System.out.println("1. 추첨 대상 추가");
				System.out.println("2. 추첨 대상 삭제");
				System.out.println("3. 당첨 대상 확인");
				System.out.println("4. 정렬된 당첨 대상 확인");
				System.out.println("5. 당첨 대상 검색 ");
				System.out.println("9. 종료");
				System.out.print("메뉴 번호 선택 :");
			
				int choice = sc.nextInt();
				sc.nextLine();
				
				switch(choice) {
				case 1:
					insertObject();
					break;
				case 2:
					deleteObject();
					break;
				case 3:
					winObject();
					break;
				case 4:
					sortedWinObject();
					break;
				case 5:
					searchWinner();
					break;
				case 9:
					System.out.println("종료");
					return;
				default:
					System.out.println("잘못입력하셨습니다. 다시입력해주세요.");
				}
			}
		}

	private void searchWinner() {
		
	            
	}

	private void sortedWinObject() {
		// TODO Auto-generated method stub
		
	}

	private void winObject() {
		// TODO Auto-generated method stub
		
	}

	private void deleteObject() {
		// TODO Auto-generated method stub
		
	}

	private void insertObject() {
		 System.out.print("추가할 추첨 대상 수 : ");
	        int count = sc.nextInt();
	        sc.nextLine();  // consume newline

	        for (int i = 0; i < count; i++) {
	            System.out.print("이름 : ");
	            String name = sc.nextLine();
	            System.out.print("핸드폰 번호('-'빼고) : ");
	            String phone = sc.nextLine();
	            Lottery lottery = new Lottery(name, phone);
	            
	            if (lc.insertObject(lottery)) {
	                System.out.println("추첨 대상 추가 완료되었습니다.");
	            } else {
	                System.out.println("중복된 대상입니다. 다시 입력하세요.");
	                i--;
	            }
	        }
		
	}

	
}
